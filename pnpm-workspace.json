{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cdn.statically.io/gh/danielbayley/schemas/refs/heads/json/pnpm-workspace.json",
  "title": "pnpm-workspace.yaml",
  "description": "JSON schema for pnpm-workspace.yaml files.",
  "$comment": "https://pnpm.io/pnpm-workspace_yaml",
  "$defs": {
    "object": {
      "type": "object",
      "minProperties": 1
    }
  },
  "additionalProperties": false,
  "required": [
    "packages"
  ],
  "properties": {
    "$schema": {
      "$comment": "https://json-schema.org/understanding-json-schema/reference/schema#schema",
      "$ref": "/gh/danielbayley/schemas/refs/heads/json/uri.json"
    },
    "packages": {
      "description": "pnpm-workspace.yaml defines the root of the workspace and enables you to\ninclude / exclude directories from the workspace. By default all packages of\nall subdirectories are included.\nThe root package is always included, even when custom location wildcards are used.",
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "$ref": "/gh/danielbayley/schemas/refs/heads/json/paths.json#/$defs/folder"
      }
    },
    "catalog": {
      "$ref": "/gh/danielbayley/schemas/refs/heads/json/package.json#/$defs/dependency",
      "description": "The top-level catalog field allows users to define a catalog named default.",
      "$comment": "https://pnpm.io#default-catalog"
    },
    "catalogs": {
      "$ref": "#/$defs/object",
      "description": "Multiple catalogs with arbitrarily chosen names can be configured under the catalogs key.",
      "$comment": "https://pnpm.io#named-catalogs",
      "additionalProperties": {
        "$ref": "/gh/danielbayley/schemas/refs/heads/json/package.json#/$defs/dependency"
      }
    }
  },
  "$ref": "#/$defs/object"
}
