{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cdn.statically.io/gh/danielbayley/schemas/refs/heads/json/npm-semver.json",
  "title": "npm SemVer",
  "description": "Version must be parseable by node-semver, which is bundled with npm as a dependency.",
  "$comment": "https://github.com/npm/node-semver#range-grammar",
  "type": "string",
  "minLength": 3,
  "pattern": "^(\\*|latest|next|(^v?|\\sv?|[~^]|[<>]=?))?(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
}
